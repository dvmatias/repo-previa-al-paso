<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorActivityBackground</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="PromotionTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorActivityBackground</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="RatingBarPromotionItem" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorAccentPurpleLight</item>
        <item name="colorControlActivated">@color/colorAccentPurpleLight</item>
    </style>

    <style name="RatingBarPromotion" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

    <style name="RatingBarPromotion1" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/promotionTypeBackground</item>
        <item name="colorControlActivated">@color/promotionTypeBackground</item>
    </style>
</resources>