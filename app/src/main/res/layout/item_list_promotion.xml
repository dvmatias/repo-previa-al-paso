<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_promotion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardElevation="2dp"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_promotion_image"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="#AF000000"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingTop="8dp" >

                        <TextView
                            android:id="@+id/tv_item_promotion_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fernet con Coca"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:layout_marginBottom="4dp"
                            android:lines="1"
                            android:ellipsize="end"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:orientation="horizontal">

                            <RatingBar
                                android:id="@+id/rb_item_promotion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="?android:attr/ratingBarStyleSmall"
                                android:numStars = "5"
                                android:rating   = "4"
                                android:layout_gravity="center_vertical"/>

                            <TextView
                                android:id="@+id/tv_item_promotion_votes_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="32 votos"
                                android:layout_marginStart="8dp"
                                android:textColor="#87000000"
                                android:textSize="14sp"
                                android:gravity="clip_vertical"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_item_promotion_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="8dp"
                            android:textColor="#87000000"
                            android:textSize="14sp"
                            android:lines="2"
                            android:ellipsize="end"
                            android:text="Descrición de la promo, lorem ipsum dolor sato sit amet. Lorem ipsum dolor sato sit amet.  Lorem ipsum dolor sato sit amet. Lorem ipsum dolor sato sit amet."/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp">

                            <TextView
                                android:id="@+id/tv_item_promotion_stock"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="stock"
                                android:textSize="14sp"
                                android:textAllCaps="true"
                                android:textColor="#019701"
                                android:gravity="center_vertical"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="  ·  "
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#87000000"/>

                            <TextView
                                android:id="@+id/tv_item_promotion_price"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="$XXX"
                                android:lines="1"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="0dp"
                                android:textSize="14sp"
                                android:textColor="#87000000"
                                android:textStyle="normal"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp">

                    <ImageView
                        android:id="@+id/iv_item_promotion_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.6"
                        android:src="@drawable/ic_like_border_black_24dp"
                        android:tint="#FF0000"
                        android:padding="2dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <ImageView
                        android:id="@+id/iv_item_promotion_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.6"
                        android:src="@drawable/ic_share_black_24dp"
                        android:padding="2dp"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_promotion_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:background="#fbb619"
                android:lines="1"
                android:ellipsize="end"
                android:textAllCaps="true"
                android:text="Noches, fiestas, amigos, salidas"/>
        </LinearLayout>
    </LinearLayout>


