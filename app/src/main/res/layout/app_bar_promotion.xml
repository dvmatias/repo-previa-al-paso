<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_container_image"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_collapseMode="parallax">

    <View
        android:id="@+id/v_container_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDialogMessage"
        android:layout_marginBottom="3dp" />

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"
        android:layout_marginBottom="3dp"/>

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        style="@style/MyProgressStyle"/>

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/img_logo_in"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_gravity="start"
        android:visibility="gone"
        android:layout_marginBottom="3dp"/>

    <ImageView
        android:id="@+id/iv_beers"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/img_beers_in"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_gravity="end"
        android:visibility="gone"
        android:layout_marginBottom="3dp"/>

    <View
        android:id="@+id/v_app_bar_main_shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/v_app_bar_main_shadow_height"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_shadow_horizontal"
        android:paddingEnd="@dimen/v_app_bar_main_shadow_padding_end"
        android:paddingStart="@dimen/v_app_bar_main_shadow_padding_start" />
</FrameLayout>