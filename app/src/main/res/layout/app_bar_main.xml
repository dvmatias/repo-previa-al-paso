<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    app:layout_collapseMode="pin">

    <ImageView
        android:id="@+id/iv_app_bar_main_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:fitsSystemWindows="true"
        android:scaleType="centerInside"
        android:src="@drawable/img_promotions_toolbar" />

    <TextView
        android:id="@+id/tv_app_bar_main_toolbar_marquee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundMarquee"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:padding="@dimen/tv_app_bar_main_toolbar_marquee_padding"
        android:singleLine="true"
        android:text="@string/toolbar_marquee"
        android:textColor="@color/colorTextMarquee"
        android:textSize="@dimen/tv_app_bar_main_toolbar_marquee_text_size" />

    <View
        android:id="@+id/v_app_bar_main_shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/v_app_bar_main_shadow_height"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_shadow_horizontal"
        android:paddingEnd="@dimen/v_app_bar_main_shadow_padding_end"
        android:paddingStart="@dimen/v_app_bar_main_shadow_padding_start" />
</LinearLayout>